h1(class="text-xl font-bold text-center text-gray-700") Scheduled Tasks
main(class="w-full flex flex-col gap-1")

  header(class="flex flex-row gap-2 md:gap-3")
    each log, index in logs
      button(type="button" tab-name=log.name onclick=`toggle("${log.name}")` class={active:index===0})
        span #{log.name}
        span (#{log.data.length})

  each log, index in logs
    section(tab-name=log.name class={active:index===0})
      ul
        each item in log.data
          li
            span(class="text-gray-600") #{item.date} (#{item.timeAgo})
            span(class="text-gray-800")= item.message