{
  "name": "nodejs-scheduled-tasks",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "src/www"
      ],
      "extensions": "pug,css",
      "quiet": true
    }
  },
  "scripts": {
    "build": "npm run build:css && tsc",
    "start": "node dist/index.js",
    "build:css": "postcss src/www/style.css -o public/style.css",
    "dev": "npm run build:css && concurrently \"tsc --watch\" \"nodemon -q dist/index.js\" \"npm-watch\"",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "author": "MR-Addict",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongodb": "^5.1.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.1",
    "pug": "^3.0.2",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.13.0",
    "@types/node-schedule": "^2.1.0",
    "@types/nodemailer": "^6.4.7",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.20",
    "npm-watch": "^0.11.0",
    "postcss-cli": "^10.1.0",
    "postcss-minify": "^1.1.0",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.9.5"
  }
}
